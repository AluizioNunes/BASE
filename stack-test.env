# Variáveis de ambiente para teste da stack BASE
# Configure estas variáveis no Portainer antes do deploy

# Domínio para teste (pode ser localhost ou IP do servidor)
DOMAIN=localhost

# Email para SSL (opcional para teste local)
ACME_EMAIL=admin@exemplo.com

# Credenciais do banco de dados
POSTGRES_USER=base_user
POSTGRES_PASSWORD=base_password_123
POSTGRES_DB=base_db

# URLs da aplicação
REACT_APP_API_URL=https://localhost/api
BACKEND_CORS_ORIGINS=https://localhost

# Configurações do banco de dados
DATABASE_URL=postgresql://base_user:base_password_123@db:5432/base_db

# Configurações do Redis
REDIS_URL=redis://redis:6379

# Configurações do RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Configurações de debug (True para desenvolvimento)
DEBUG=True

# Registry de imagens (localhost para build local)
REGISTRY=localhost
TAG=latest

# Configurações do Grafana
GRAFANA_ADMIN_PASSWORD=admin123

# Configurações de retenção do Loki
LOKI_RETENTION_HOURS=24 